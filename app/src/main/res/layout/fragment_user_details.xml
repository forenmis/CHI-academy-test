<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderDetails"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderDetails" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderName"
        app:layout_constraintStart_toEndOf="@id/tvHeaderName"
        app:layout_constraintTop_toTopOf="@id/tvHeaderName"
        tools:text="@string/name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="@string/age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderAge"
        app:layout_constraintStart_toEndOf="@id/tvHeaderAge"
        app:layout_constraintTop_toTopOf="@id/tvHeaderAge"
        tools:text="@string/name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvHeaderIsStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="@string/isStudent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderAge" />

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switchIsStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@id/tvHeaderIsStudent"
        app:layout_constraintStart_toEndOf="@id/tvHeaderIsStudent"
        app:layout_constraintTop_toTopOf="@id/tvHeaderIsStudent"
        app:thumbTint="@color/selector_thumb"
        app:trackTint="@color/selector_track" />


</androidx.constraintlayout.widget.ConstraintLayout>