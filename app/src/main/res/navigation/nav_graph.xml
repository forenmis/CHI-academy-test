<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/usersFragment">


    <fragment
        android:id="@+id/usersFragment"
        android:name="com.example.chiacademytest.screens.users.UsersFragment"
        android:label="UsersFragment"
        tools:layout="@layout/fragment_users">
        <action
            android:id="@+id/action_usersFragment_to_createUserFragment"
            app:destination="@id/createUserFragment"
            app:popUpTo="@layout/fragment_users"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_usersFragment_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment"
            app:popUpTo="@id/usersFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/createUserFragment"
        android:name="com.example.chiacademytest.screens.create_user.CreateUserFragment"
        android:label="CreateUserFragment"
        tools:layout="@layout/fragment_create_user" />
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.example.chiacademytest.screens.user_details.UserDetailsFragment"
        android:label="UserDetailsFragment"
        tools:layout="@layout/fragment_user_details">
        <argument
            android:name="id"
            app:argType="long" />
    </fragment>
</navigation>